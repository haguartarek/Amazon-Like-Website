@model WebApplication2.ViewModels.LoginUserViewModel

@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="~/css/Loginstylesheet.css" media="all" />

<h1 id="header">Login to your world...</h1>
@*<marquee class="buybounty">BuyBounty where every purchase is a Prize</marquee>*@

<hr />
<div class="row">
    <div class="col-md-4" id="loginform">
        <form asp-action="Login">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>

            </div>
              <br>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="rememberme" /> Remember Me
                </label>
            </div>

            <br>
            <div  class="form-group">
               @* <button id="loginbtn" class="button-81" role="button"> Button 81</button>*@
                <input type="submit" role="button" value="Login" class="button-81" id="loginbtn" />
            </div>
        </form>
        <br>
        <a asp-action="register">Register here!</a>
    </div>
</div>

<h3>
    <span>Discover</span>
    <span>your</span>
    <span>Bounty</span>
    <span>at</span>
    <span class="title"><span class="first-letter">B</span>uy<span class="fourth-letter">B</span>ounty </span></span>
</h3>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
